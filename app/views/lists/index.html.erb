
<% if @lists.any? %>
    <ul>
    <%@lists.each do |list| %>
        <li><%=link_to list.name, list %></li>
        <%= link_to "Edit", edit_list_path(list) %> |
        <%= link_to "Delete", list, method: :delete, data: {confirm: "Are you sure?"} %>
    <%end%>
    </ul>
<%end%>

<%=link_to "New List", new_list_path %>